<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RoboApp.MainPage">
    
   



    <ScrollView BackgroundColor="#EBEBEB" >
        <VerticalStackLayout 
            Spacing="5"
            Padding="5, 5, 5, 5"
            VerticalOptions="End">

            <VerticalStackLayout MinimumWidthRequest="200" HorizontalOptions="FillAndExpand">

                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20*"/>
                        <RowDefinition Height="40*"/>
                        <RowDefinition Height="80*"/>
                        <RowDefinition Height="80*"/>
                    </Grid.RowDefinitions>

                    
                    <Image Source="robo.png" Grid.Row="0"  Margin="5,5,5,5"   WidthRequest="250" />
               
                    
                        <Label Text="Device is connected"  Grid.Row="1"  FontFamily="Oxygen" FontSize="Small" TextColor="#43463C" Margin="0,5,5,0" x:Name="LabelOutput"/>
                        <Label Text="RoboOut:"  Grid.Row="2"  FontFamily="Oxygen" FontSize="Small" TextColor="#43463C" Margin="0,5,5,0" x:Name="LabelOutput_Robo"/>



                    <!--Dolny wiersz-->
                <Grid MinimumWidthRequest="200" Grid.Row="3" x:Name="SteeringGrid" BackgroundColor="#D7EB1A" >
                    
                    <!-- Siatka przycisków sterowniczych -->
                    <Grid.ColumnDefinitions>
                        <!--3 kolumny-->
                        <ColumnDefinition Width="120*" />
                        <ColumnDefinition Width="120*" />
                        <ColumnDefinition Width="120*" />

                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <!--4 wiersze-->
                        <RowDefinition Height="100" />
                        <RowDefinition Height="100" />
                        <RowDefinition Height="100" />
                        <RowDefinition Height="100" />

                    </Grid.RowDefinitions>
                    <!--Lewa kolumna-->
                        <Button Grid.Column="0" Grid.Row="0"  ImageSource="du_l_arrow.png"   BorderWidth="0.5" BorderColor="#EBEBEB" ClassId="DU_L_Button" Pressed="Button_Pressed" Released="Button_Released"/>
                    <!--Diagonalnie góra lewo-->
                        <Button Grid.Column="0" Grid.Row="1"  ImageSource="left_arrow.png"  BorderWidth="0.5" BorderColor="#EBEBEB" Pressed="Button_Pressed" Released="Button_Released" ClassId="L_Button" />
                    <!--Lewo-->
                        <Button Grid.Column="0" Grid.Row="2"  ImageSource="dd_l_arrow.png"  BorderWidth="0.5" BorderColor="#EBEBEB" Pressed="Button_Pressed" Released="Button_Released" ClassId="DD_L_Button"/>
                    <!--Diagonalnie dół lewo-->


                    <!--Środkowa kolumna-->
                        <Button Grid.Column="1" Grid.Row="0" ImageSource="up_arrow.png"  BorderWidth="0.5" BorderColor="#EBEBEB" Pressed="Button_Pressed" Released="Button_Released" ClassId="U_Button"/>

                    <!--Środek grid-->
                    <Grid Grid.Column="1" Grid.Row="1">
                        <!-- Siatka przycisków sterowniczych obrot -->
                        <Grid.ColumnDefinitions>
                            <!--2 kolumny-->
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <!--1 wiersz-->
                            <RowDefinition Height="100"/>
                        </Grid.RowDefinitions>
                            <Button Grid.Column="0"   ImageSource="r_l_arrow.png" BorderWidth="0.5" BorderColor="#EBEBEB" Pressed="Button_Pressed" Released="Button_Released" ClassId="R_L_Button"/>
                            <Button Grid.Column="2"   ImageSource="r_r_arrow.png"  BorderWidth="0.5" BorderColor="#EBEBEB" Pressed="Button_Pressed" Released="Button_Released" ClassId="R_R_Button"/>
                    </Grid>

                        <Button Grid.Column="1" Grid.Row="2"  ImageSource="down_arrow.png"   BorderWidth="0.5" BorderColor="#EBEBEB" Pressed="Button_Pressed" Released="Button_Released"  ClassId="D_Button"/>

                    <!--Prawa kolumna-->
                        <Button Grid.Column="2" Grid.Row="0"  ImageSource="du_r_arrow.png"  BorderWidth="0.5" BorderColor="#EBEBEB" Pressed="Button_Pressed" Released="Button_Released" ClassId="DU_R_Button"/>
                    <!--Diagonalnie góra prawo-->
                        <Button Grid.Column="2" Grid.Row="1"  ImageSource="right_arrow.png"  BorderWidth="0.5" BorderColor="#EBEBEB" Pressed="Button_Pressed" Released="Button_Released" ClassId="R_Button"/>
                    <!--Prawo-->
                        <Button Grid.Column="2" Grid.Row="2"  ImageSource="dd_r_arrow.png" BorderWidth="0.5" BorderColor="#EBEBEB" Pressed="Button_Pressed" Released="Button_Released" ClassId="DD_R_Button"/>
                    <!--Diagonalnie dół prawo-->

                    <!--Scalony dolny wiersz | Emergency STOP -->
                        <Button Margin="0, 5, 0, 0" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="3" Text="STOP" BorderWidth="3" BorderColor="#991A1A" BackgroundColor="#D04539" FontFamily="Oxygen" FontAttributes="Bold" TextColor="#FFFFFF" FontSize="32" IsEnabled="True"/>
                </Grid>
                </Grid>
            </VerticalStackLayout>





